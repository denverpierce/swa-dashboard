{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "lib": [
      "esnext",
      "DOM"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node","playwright"],
    "noImplicitAny": false,
    "typeRoots": ["node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "resolveJsonModule": true,
    "outDir": "bin",
    "sourceMap": true,
  },
  "compileOnSave": true,
  "files": ["src/index.ts"]
}
