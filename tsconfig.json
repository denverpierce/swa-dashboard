{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "lib": [
      "esnext"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"],
    "noImplicitAny": false,
    "typeRoots": ["node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "target": "ES6",
    "resolveJsonModule": true,
    "outDir": "bin"
  },
  "compileOnSave": true,
  "files": ["src/index.ts"]
}
